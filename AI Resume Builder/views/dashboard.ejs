<!-- Modal -->
<div class="modal fade" id="create-resume" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content shadow-lg border-0 rounded-4">
      <div class="modal-header bg-success text-white rounded-top-4">
        <h1 class="modal-title fs-5 mb-0" id="exampleModalLabel">Create New Resume</h1>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body px-4 py-3">
        <label for="recipient-name" class="col-form-label fw-semibold">Enter Job Title:</label>
        <input type="text" class="form-control mt-1" id="recipient-name" placeholder="e.g. Software Developer">
      </div>

      <div class="modal-footer px-4 pb-4 border-0">
        <button type="button" class="btn btn-outline-success" data-bs-dismiss="modal">Close</button>
        <button type="button" id="create-resume-btn" class="btn btn-success px-4">Create Resume</button>
      </div>
    </div>
  </div>
</div>


<script src="/js/dashboard.js"></script>
